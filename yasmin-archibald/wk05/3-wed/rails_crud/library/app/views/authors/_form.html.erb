<%= form_for @author do |f| %>

<%= f.lable :name %>
<%= f.text_field :name, :required => true %>
<%= f.label :nationality %>
<%= f.text_field :nationality %>
<%= f.label :dob, 'Date of Birth' %>
<%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>
<%= f.label :image %>
<%= f.url_field :image %>
<%= f.label :quote %>
<%= f.text_field :quote %>
<%= f.submit  %>

<% end %>
