<%= form_for @book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :year_published %>
    <%= f.text_field :year_published %>
    <%= f.label :image %>
    <%= f.url_field :image, :required => true %>
    <%= f.label :author_id %>
    <%= f.select :author_id, Author.pluck(:name, :id), :include_blank => true %>
    <%= f.submit %>
<% end %>