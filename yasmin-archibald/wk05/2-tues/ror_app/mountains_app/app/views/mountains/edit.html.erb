<h1>Edit Mountain</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
    <label>
        Name:
        <input name="name" required value="<%= @mountain.name %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

    <label>
        Location:
        <input type="number" name="location" value="<%= @mountain.location %>">
    </label>

    <label>
        Summit:
        <input type="number" name="summit" value="<%= @mountain.summit %>">
    </label>

    <label>
        Population:
        <input type="number" name="population" value="<%= @mountain.population %>">
    </label>

    <button>Create Mountain</button>
</form>