<h1>New Mountain</h1>

<form action="<%= mountains_path %>" method="post">
    <label>
        Name:
        <input name="name" required>
    </label>

    <label>
        Image:
        <input type="url" name="image">
    </label>

    <label>
        Location:
        <input name="location">
    </label>

    <label>
        Summit:
        <input type="number" name="summit">
    </label>

    <label>
        Population:
        <input type="number" name="population">
    </label>

    <button>Create Mountain</button>
</form>