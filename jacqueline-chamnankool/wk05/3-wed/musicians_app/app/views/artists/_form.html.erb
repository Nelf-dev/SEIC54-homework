<%= form_for @artist do |f| %>
    <%= f.label :name %><br/>
    <%= f.text_field :name, :required => true %><br/>

    <%= f.label :genre %><br/>
    <%= f.text_field :genre %><br/>

    <%= f.label :label %><br/>
    <%= f.text_field :label %><br/>

    <%= f.label :years %><br/>
    <%= f.text_field :years %><br/>

    <%= f.label :image %><br/>
    <%= f.url_field :image %><br/>

    <%= f.submit :class => "btn" %>
<% end %>