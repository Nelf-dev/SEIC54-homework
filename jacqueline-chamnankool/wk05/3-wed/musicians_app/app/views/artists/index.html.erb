<h1>All artists</h1>
<% @artists.each do |artist| %>
    <%= image_tag artist.image, :class => "thumb" if artist.image.present? %>
    <ul>
        <li><b>Name:</b> <%= link_to artist.name, artist %></li>
        <li><b>Genre:</b> <%= artist.genre %></li>
        <li><b>Label:</b> <%= artist.label %></li>
        <li><b>Years:</b> <%= artist.years %></li>
    </ul>
<% end %>