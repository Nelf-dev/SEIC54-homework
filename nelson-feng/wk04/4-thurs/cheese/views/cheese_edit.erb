<h1>Cheese</h1>
<h2>Cheesy Edit Scene</h2>

<form action="/cheese/<%= @cheese["id"]%>" method="post">
    <label>
        Name:
        <input name="name" value="<%= @cheese["name"]%>">
    </label>
    
    <label>
        Region:
        <input name="region" value="<%= @cheese["region"]%>">
    </label>

    <label>
        image:
        <input name="image" value="<%= @cheese["image"]%>">
    </label>

    <label class='info'>
        Info:
        <input style="height: 150px; width: 300px;" name="blurb" value="<%= @cheese["blurb"]%>">
    </label>


    <button>Edit Cheese</button>
</form>



