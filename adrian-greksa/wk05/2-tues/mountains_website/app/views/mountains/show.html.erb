<h1>
    <%= @mountain.name %>
</h1>

<%= image_tag @mountain.image, :class => 'feature' if @mountain.image.present? %>

<ul>
    <li><%= @mountain.location %></li>
    <li title="<%= @mountain.height %>"><%= number_to_human @mountain.height %></li>
    <li><%= @mountain.funfact %></li>
</ul>

<div class="controls">
    <%= link_to 'Edit mountain', edit_mountain_path(@mountain.id) %> |
    <%= link_to 'Delete mountain', destroy_mountain_path(@mountain.id) %>
</div>