<div class = "container">

<h1>
    <%= @ocean.name %>
</h1>

<%= image_tag @ocean.image, :class => 'feature' if @ocean.image.present? %>

<ul>
    <li>Name: <%= @ocean.name %></li>
    <li>Country: <%= @ocean.country %></li>
</ul>

<div class="controls">
    <%= link_to 'Edit ocean', edit_ocean_path(@ocean.id) %>
    <%= link_to 'Delete ocean', delete_ocean_path(@ocean.id) %>
</div>

</div>