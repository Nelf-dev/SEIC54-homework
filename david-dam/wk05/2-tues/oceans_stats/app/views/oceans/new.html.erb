<h1>Yay More Oceans</h1>

<form action="<%= oceans_path %>" method="post">
    <label>
    Name:
        <input name="name" required>
    </label>

    <label>
    Location:
        <input name="location" type="location">
    </label>

    <label>
    Area:
        <input name="area" type="area">
    </label>

    <button>Create Ocean</button>
</form>